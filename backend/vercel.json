{
  "version": 2,
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.9"
    }
  },
  "routes": [
    {
      "src": "/api/voice-upload",
      "dest": "/api/voice-upload.py"
    },
    {
      "src": "/api/today-entries",
      "dest": "/api/today-entries.py"
    },
    {
      "src": "/api/today-totals",
      "dest": "/api/today-totals.py"
    },
    {
      "src": "/api/health",
      "dest": "/api/health.py"
    }
  ],
  "env": {
    "GROQ_API_KEY": "@groq_api_key"
  },
  "build": {
    "env": {
      "PYTHONPATH": "/var/task"
    }
  }
}